#!/bin/bash

# Git Sync Script for CS425 VMs
# Replace these variables with your actual values
grp="ssh snh6@fa21-cs425-g71-01.cs.illinois.edu"  # Your group number
netid="nithishsujay"  # Your NetID
folderName="g71"  # The folder name where the repo is cloned

echo "Syncing repository changes to all CS425 VMs..."
echo "Group: $grp"
echo "NetID: $netid"
echo "Folder: $folderName"
echo ""

# Sync changes on all VMs
for i in {1..8}
do
    echo "*******************************************************************************************"
    echo "***********************************Git Pull at Server $i ***********************************"
    ssh $netid@fa21-cs425-g`printf $grp`-`printf %02d $i`.cs.illinois.edu "cd $folderName; git checkout main; git pull; exit"
done

echo ""
echo "Repository sync complete!"
